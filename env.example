# Exchange API Keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Webhook Security
WEBHOOK_PASSPHRASE=your_secure_passphrase_here

# Application Settings
NODE_ENV=development
LOG_LEVEL=debug

# Exchange Configuration
# Limit order offset - коэффициент отступа для лимитных ордеров
# Примеры: 0.001 = 0.1%, 0.005 = 0.5%, 0.01 = 1%
# По умолчанию: 0.001 (0.1%)
LIMIT_ORDER_OFFSET=0.001

# Stop Loss offset - коэффициент для автоматического стоп-лосса
# 0 = отключено (по умолчанию)
# Примеры: 0.02 = 2%, 0.03 = 3%, 0.05 = 5%
# Стоп-лосс будет выставлен автоматически после входа в позицию
STOP_LOSS_OFFSET=0

