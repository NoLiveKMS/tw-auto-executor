PORT=3000
EXCHANGE_API_KEY=your_api_key
EXCHANGE_SECRET=your_secret
WEBHOOK_PASSPHRASE=your_secure_password
TELEGRAM_BOT_TOKEN=your_telegram_token
TELEGRAM_CHAT_ID=your_chat_id
NODE_ENV=development

# Exchange Configuration
# Limit order offset - коэффициент отступа для лимитных ордеров
# Примеры: 0.001 = 0.1%, 0.005 = 0.5%, 0.01 = 1%
LIMIT_ORDER_OFFSET=0.001

# Stop Loss offset - коэффициент для автоматического стоп-лосса
# 0 = отключено (по умолчанию)
# Примеры: 0.02 = 2%, 0.03 = 3%, 0.05 = 5%
STOP_LOSS_OFFSET=0

